<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="atlas.Controller" xmlns:fx="http://javafx.com/fxml">
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="username" promptText="domain\username" prefWidth="200" prefHeight="20" GridPane.columnIndex="1" GridPane.rowIndex="0" focusTraversable="false"/>
            <PasswordField fx:id="password" promptText="password" prefWidth="200" prefHeight="20" GridPane.columnIndex="1" GridPane.rowIndex="1" focusTraversable="false" onAction="#signIn"/>
            <Button text="Login" GridPane.columnIndex="0" GridPane.rowIndex="3" fx:id="login" onAction="#btnSignIn"/>
        </GridPane>
    </center>

</BorderPane>